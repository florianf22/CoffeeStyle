generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mug {
  id Int @id @default(autoincrement())

  name     String
  price    Int
  onSale   Boolean? @default(false)
  oldPrice Int?
  featured Boolean? @default(false)
  imgUrl   String
  slug     String

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Blog {
  id Int @id @default(autoincrement())

  title     String
  highlight String
  imgUrl    String

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}
