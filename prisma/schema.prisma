generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Picture {
  url String @unique
  twoForMagazine Boolean? @default(false)

  Mug Mug[]
}

model Mug {
  id       Int      @id @default(autoincrement())
  name     String
  price    Int
  onSale   Boolean? @default(false)
  oldPrice Int?
  featured Boolean? @default(false)

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt

  imgUrl  String

  picture Picture @relation(references: [url], fields: [imgUrl])
}
