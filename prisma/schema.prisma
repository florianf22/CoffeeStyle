generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Dimensions {
  id Int @id @default(autoincrement())

  length Float
  height Float
  width  Float
  weight Float

  // relations
  mug Mug?
}

model Mug {
  id Int @id @default(autoincrement())

  name     String
  price    Int
  onSale   Boolean? @default(false)
  oldPrice Int?
  featured Boolean? @default(false)
  imgUrl   String
  slug     String
  details  String
  category String

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt

  // relations
  dimensionsId Int        @unique
  
  dimensions   Dimensions @relation(fields: [dimensionsId], references: [id])
}

model Blog {
  id Int @id @default(autoincrement())

  title     String
  highlight String
  imgUrl    String

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}
